{
  "name": "tropy-internet-archive",
  "productName": "Internet Archive",
  "version": "1.0.0",
  "description": "Upload items to Internet Archive.",
  "icon": "icon.svg",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --color .",
    "test": "electron-mocha --renderer test",
    "test:ci": "electron-mocha --renderer test --no-sandbox",
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -c -w rollup.config.js"
  },
  "author": {
    "name": "Center for History and New Media, George Mason University",
    "url": "https://chnm.gmu.edu"
  },
  "repository": "github:tropy/tropy-internet-archive",
  "license": "AGPL-3.0",
  "hooks": {
    "export": true
  },
  "options": [
    {
      "field": "api.access_key",
      "label": "Internet Archive Access Key",
      "hint": "Your Internet Archive S3 access key"
    },
    {
      "field": "api.secret_key",
      "label": "Internet Archive Secret Key",
      "hint": "Your Internet Archive S3 secret key"
    },
    {
      "field": "collection",
      "label": "Collection",
      "hint": "Collection identifier (optional)",
      "default": "opensource"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "chai": "^6.2.2",
    "electron": "^40.1.0",
    "electron-mocha": "^13.1.0",
    "eslint": "^9.39.2",
    "fetch-mock": "^12.6.0",
    "jsonld": "^9.0.0",
    "node-fetch": "^3.3.2",
    "rollup": "^4.57.1",
    "rollup-plugin-license": "^3.6.0",
    "sinon": "^21.0.1"
  }
}
